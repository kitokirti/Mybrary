<div class="form-row">
    <div class="form-item">
        <div>
            <label>The Title</label>
            <input type="text" name="title" value="<%= book.title %>">
        </div>
    </div>
    <div class="form-item">
            <label>Author</label>
            <select name="author">
                <% authors.forEach(author =>{ %>
                <% if(author.id === book.author){ %>
                <option selected label="<%=author.name%>" value="<%=author.id%>"></option>
                <% }else{ %>
                <option label="<%=author.name%>" value="<%=author.id%>"></option>
                <% } %>
                <% }) %>
            </select>
    
    </div>
    <div class="form-item">
        <div>
            <label>Publish Date</label>
            <input type="date" name="publishedDate"
                value="<%= book.publishedDate ==null ? '' : book.publishedDate.toISOString().split('T')[0] %>">
        </div>
    </div>
    <div class="form-item">
        <div>
            <label>Page Count</label>
            <input type="number" name="pageCount" min="1" value="<%=book.pageCount %>">
        </div>
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" class="filepond" name="cover">
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><%= book.description %></textarea>
    </div>
</div>